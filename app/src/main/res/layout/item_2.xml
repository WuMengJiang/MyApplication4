<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_2_1"
        android:layout_alignParentTop="true"
        android:layout_width="100dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_2_1"
        android:layout_below="@id/iv_2_1"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@id/iv_2_1"
        android:id="@+id/iv_2_2"
        android:layout_alignParentTop="true"
        android:layout_width="100dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginLeft="150dp"
        android:id="@+id/tv_2_2"
        android:layout_toRightOf="@id/tv_2_1"
        android:layout_below="@id/iv_2_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
</RelativeLayout>
